<% if note.public || current_user %>
  <div class="entry-blurb">
    <div>
      <h2><%= note.subject %></h2>
      <% if !note.public %>
        <h5 class="hidden-note-blurb"> This note is currently hidden </h5>
      <% end %>
    </div>
    <p>
    <%= note.body %>
    </p>
    <% if current_user %>
      <div class="destroy-link">
        <%= link_to "Destroy", note_path(note), data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure you want to delete this note entry (subject #{note.subject})?"
        } %>
      <%= link_to "Edit", edit_note_path(note) %>
      </div>
      <% if note.attachments.blobs().empty? %>
        <div class="error">
          <p>Blob not found</p>
        </div>
      <% else %>
        <a href="<%= url_for(note.attachments.blobs().first) %>" title="<%= note.attachments.blobs().first.filename %>" target="_blank">View/download</a>
      <% end %>
    <% end %>
    <footer class="datetime-footer">Created: <%= note.created_at.strftime("%B #{note.created_at.day.ordinalize}, %Y") %></footer>
  </div>
<% else %>
  <div class="entry-blurb">
    <div>
      <h2>You must be logged in to view this note</h2>
    </div>
  </div>
<% end %>
