<nav class="sidebar">
  <details>
    <summary>Blog</summary>
    <span>
      <%= 
      raw(generate_tree_from_article_list(Article.order(:title).all, article))
    %>
    </details>
    <% if current_user %>
      <% if article && article.id %>
        <div> <%= link_to "Edit", edit_article_path(article) %> </div>
        <div><%= link_to "Destroy", article_path(article), data: {
                          turbo_method: :delete,
                          turbo_confirm: "Are you sure you want to delete this article (#{article.title})?"
                        } %></div>
      <% end %>
      <div><%= link_to "New Article", new_article_path %></div>
      <div><%= link_to "New Article from Doc", articles_get_html_from_docx_path %></div>
      <div><%= link_to "Uploads", uploads_path %></div>
      <% if request.path == uploads_path %>
        <div><%= link_to "New Upload", new_upload_path %></div>
      <% end %>
      <div><%= link_to 'Log Out', logout_path, data: {
                          turbo_method: :get,
                          turbo_confirm: "Are you sure you want to log out, #{current_user.name}?"
                        } %></div>
    <% else %>
      <div><%= link_to 'Eliza Only', login_path %></div>
    <% end %>
    <script defer>
      {
        let current_article = document.getElementById("current-article-link")

        if (current_article) {
          let parentNode = current_article.parentNode
          while (parentNode) {
            parentNode.open = "true"
            parentNode = parentNode.parentNode
          }
        }
      }
    </script>
  </span>
</nav>
